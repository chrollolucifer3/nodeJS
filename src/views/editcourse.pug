doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css', integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC', crossorigin='anonymous')
        link(rel="stylesheet", href="/css/style.css")
    
        title Edit Courses
    body 
        include ./includes/header
        h1.mt-4.container Edit Courses 
        form.container.mt-4(method="POST" action=`/courses/${courses._id}?_method=PUT` enctype="multipart/form-data")
            .mb-3
                label(for="course-name" class="form-label") Course name
                input(type="text" class="form-control" name="name" id="course-name" value=`${courses.name}`)
                label.mt-4(for="description-input" class="form-label") Description
                textarea(cols="10", rows="5" class="form-control" name="description" id="description-input")=courses.description
                label.mt-4(for="formFile" class="form-label") Default file input example
                input.form-control(type="file" id="formFile" name="cover")

            button(type="submit" class="btn btn-primary") Update


        include ./includes/footer

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM', crossorigin='anonymous')