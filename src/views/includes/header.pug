nav.navbar.navbar-expand-lg.bg-body-tertiary
  .container
    a.navbar-brand(href='#') YourCourses
    button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    .collapse.navbar-collapse#navbarSupportedContent
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link.active(aria-current='page', href='/') Home

        //- Kiểm tra nếu người dùng đã đăng nhập
        if username
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false') Courses
            ul.dropdown-menu
              li
                a.dropdown-item(href='/courses/create') Create Courses
              li
                a.dropdown-item(href='/courses/manage') Course management

      form.d-flex(role='search')
        input.form-control.me-2(type='search', placeholder='Search', aria-label='Search')
        button.btn.btn-outline-success(type='submit') Search

      //- Kiểm tra nếu người dùng đã đăng nhập
      if username
        //- Hiển thị thông tin người dùng đăng nhập
        ul.navbar-nav.mb-2.mb-lg-0
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')=username
            ul.dropdown-menu
              li 
                a.dropdown-item(href='/update-user') Manage User

                <li><hr class="dropdown-divider"></li>
                a.dropdown-item(href='/logout') Logout

      else
        //- Hiển thị nút đăng nhập và đăng ký nếu người dùng chưa đăng nhập
        a.btn.btn-primary.left(href='/login') Login  
        a.btn.btn-primary.left(href='/signup') Sign Up
